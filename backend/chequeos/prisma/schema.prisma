// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum ResultadoChequeo {
  SEGURO
  RECHEQUEAR
}

model Chequeo {
  id            Int              @id @default(autoincrement())
  appointmentId Int // id del turno del servicio de turnos
  total         Int
  resultado     ResultadoChequeo
  observacion   String?
  createdAt     DateTime         @default(now())
  puntos        PuntoChequeo[]
}

model Step {
  id     Int            @id @default(autoincrement())
  nombre String         @unique
  puntos PuntoChequeo[]
}

model PuntoChequeo {
  id      Int @id @default(autoincrement())
  stepId  Int
  puntaje Int

  chequeo   Chequeo @relation(fields: [chequeoId], references: [id], onDelete: Cascade)
  chequeoId Int

  step Step @relation(fields: [stepId], references: [id])
}
